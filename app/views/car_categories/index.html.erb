<h1>Categorias de veículos</h1>

<p><%= link_to 'Registrar nova categoria', new_car_category_path %></p>

<% if @car_categories.empty? %>
  <p>Nenhuma categoria de veículo cadastrada.</p>
<% else %>
  <ul>
    <% @car_categories.each do |c| %>
      <li><%= link_to c.name, c %></li>
    <% end %>
  </ul>
<% end %>

<p><%= link_to 'Voltar', root_path %></p>



