<h1>Registrar modelo de veículo</h1>

<div>
  <% @car_model.errors.full_messages.each do |message|%>
    <p><%= message %></p>
  <% end %>

  <%= form_with(model: @car_model, local: true) do |f| %>
    <p>
      <%= f.label :name, 'Nome' %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :year, 'Ano' %>
      <%= f.number_field :year, value: Time.zone.now.year %>
    </p>
    <p>
      <%= f.label :motorization, 'Motor' %>
      <%= f.text_field :motorization %>
    </p>
    <p>
      <%= f.label :fuel_type, 'Combustível' %>
      <%= f.text_field :fuel_type %>
    </p>
    <p>
      <%= f.label :manufacturer_id, 'Fabricante' %>
      <%= f.collection_select :manufacturer_id, Manufacturer.all, :id, :name %>
    </p>
    <p>
      <%= f.label :car_category_id, 'Categoria' %>
      <%= f.collection_select :car_category_id, CarCategory.all, :id, :name %>
    </p>
    <%= f.submit 'Enviar' %>
  <% end %>
</div>
