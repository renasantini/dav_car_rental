<dl>
  <dt><%= Rental.human_attribute_name(:code) %></dt>
  <dd><%= @rental.code %></dd>
  <dt>Data de início:</dt>
  <dd><%= l @rental.start_date %></dd>
  <dt>Data de término:</dt>
  <dd><%= l @rental.end_date %></dd>
  <dt>Cliente:</dt>
  <dd><%= @rental.customer.name %></dd>
  <dt>Email:</dt>
  <dd><%= @rental.customer.email %></dd>
  <dt>Categoria:</dt>
  <dd><%= @rental.car_category.name %></dd>

  <% if @rental.car_rental.present? %>

    <dt>Início da locação:</dt>
    <dd><%= l @rental.car_rental.created_at, format: :long %></dd>
    <dt>Carro:</dt>
    <dd><%= @rental.car_rental.car.license_plate %></dd>
    <dt>Status:</dt>
    <dd><%= Rental.human_attribute_name("status.#{@rental.status}") %></dd>
    <dt>Locação iniciada por:</dt>
    <dd><%= @rental.car_rental.user.email %></dd>
  <% end %>
</dl>

