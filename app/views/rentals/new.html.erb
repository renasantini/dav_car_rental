<h1>Registrar nova locação</h1>

<div>
  <% @rental.errors.full_messages.each do |message|%>
    <p><%= message %></p>
  <% end %>

  <%= form_with(model: @rental, local: true) do |f| %>
    <p>
      <%= f.label :start_date, 'Data de início' %>
      <%= f.date_field :start_date, value: Time.zone.now %>
    </p>
    <p>
      <%= f.label :end_date, 'Data de término' %>
      <%= f.date_field :end_date, value: Time.zone.now %>
    </p>
    <p>
      <%= f.label :customer_id, 'Cliente' %>
      <%= f.collection_select :customer_id, Customer.all, :id, :name %>
    </p>
    <p>
      <%= f.label :car_category_id, 'Categoria' %>
      <%= f.collection_select :car_category_id, CarCategory.all, :id, :name %>
    </p>
    <%= f.submit 'Enviar' %>
  <% end %>
</div>
